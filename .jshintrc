/** Default JSHint Configuration */
{ 
    "maxerr"        : false,    // {int} Maximum error before stopping

	/** Enforcing Options */

    "bitwise"       : false,    // true: Prohibit operators (&, |, ^, etc.)
    "camelcase"     : false,    // true: Identifiers must be in camelCase
    "curly"         : false,    // true: Require {} for each new block or scope
    "eqeqeq"        : false,    // true: Require triple (===) for comparison
    "forin"         : false,    // true: Require filtering for..in loops with
	                            //       obj.hasOwnProperty()
    "immed"         : false,    // true: Require immediate invocations wrapped
	                            //       in parens e.g. `(function () { } ());`
    "indent"        : false,    // {int} Number of spaces to use for indentation
    "latedef"       : false,    // true: Require variables/functions to be
	                            //       defined before being used
    "newcap"        : false,    // true: Require capitalization of all
	                            //       constructor functions e.g. `new F()`
    "noarg"         : false,    // true: Prohibit use of `arguments.caller` and
	                            //       `arguments.callee`
    "noempty"       : false,    // true: Prohibit use of empty blocks
    "nonew"         : false,    // true: Prohibit constructor side-effects
    "plusplus"      : false,    // true: Prohibit use of `++` & `--`
    
	"quotmark"      : false,    // Quotation mark consistency:
								// false : do nothing (default)
								// true : ensure whatever is used is consistent
								// "single" : require single quotes
                                // "double" : require double quotes

    "undef"         : false,    // true: Require all non-global variables to be 
                                //       declared (prevents global leaks)
    "unused"        : false,    // true: Require all defined variables be used
    "strict"        : false,    // true: Requires all functions in Strict Mode
    "trailing"      : false,    // true: Prohibit trailing whitespaces
    "maxparams"     : false,    // {int} Max formal params allowed per function
    "maxdepth"      : false,    // {int} Max depth of nested blocks
    "maxstatements" : false,    // {int} Max number statements per function
    "maxcomplexity" : false,    // {int} Max cyclomatic complexity per function
    "maxlen"        : false,    // {int} Max number of characters per line

    /** Relaxing Options */
    "asi"           : false,     // true: Tolerate Automatic Semicolon Insertion
								 //       (no semicolons)
    "boss"          : false,     // true: Tolerate assignments where comparisons
	                             //       would be expected
    "debug"         : false,     // true: Allow debugger statements breakpoints
    "eqnull"        : false,     // true: Tolerate use of `== null`
    "es5"           : false,     // true: Allow ES5 syntax (getters / setters)
    "esnext"        : false,     // true: Allow ES.next (ES6) syntax (const)
    "evil"          : false,     // true: Tolerate `eval` and `new Function()`
    "expr"          : false,     // true: Allow `ExpressionStatement` Programs
    "funcscope"     : false,     // true: Tolerate defining variables inside
	                             //       control statements"
    "globalstrict"  : false,     // true: Allow global "use strict"
	                             //       (also enables 'strict')
    "iterator"      : false,     // true: Tolerate using `__iterator__` property
    "lastsemic"     : false,     // true: Tolerate omitting last block semicolon
    "laxbreak"      : false,     // true: Tolerate possibly unsafe line breakings
    "laxcomma"      : false,     // true: Tolerate comma-first style coding
    "loopfunc"      : false,     // true: Tolerate functions being defined in loops
    "multistr"      : false,     // true: Tolerate multi-line strings
    "proto"         : false,     // true: Tolerate using the `__proto__` property
    "scripturl"     : false,     // true: Tolerate script-targeted URLs
    "smarttabs"     : false,     // true: Tolerate mixed tabs/spaces 
    "shadow"        : false,     // true: Allows variable redefinition 
    "sub"           : false,     // true: Tolerate using `[]` notation over '.'
    "supernew"      : false,     // true: Tolerate `new function () { ... };`
	                             //       and `new Object;`
    "validthis"     : false,     // true: Tolerate using `this` in a 
	                             //       non-constructor function

    /** Environment Options */
    "browser"       : true,     // Web Browser (window, document, etc)
    "couch"         : true,     // CouchDB
    "devel"         : true,     // Development/debugging (alert, confirm, etc)
    "dojo"          : true,     // Dojo Toolkit
    "jquery"        : true,     // jQuery
    "mootools"      : true,     // MooTools
    "node"          : true,     // Node.js
    "nonstandard"   : true,     // Widely adopted globals (escape, unescape)
    "prototypejs"   : true,     // Prototype and Scriptaculous
    "rhino"         : true,     // Rhino
    "worker"        : true,     // Web Workers
    "wsh"           : true,     // Windows Scripting Host
    "yui"           : true,     // Yahoo User Interface

    /** Legacy Options */
    "nomen"         : false,    // true: Prohibit dangling `_` in variables
    "onevar"        : false,    // true: Allow only one `var` statement per function
    "passfail"      : false,    // true: Stop on first error
    "white"         : false,    // true: Check against strict whitespace and indentation rules

    /** Custom Global Options */
    "predef"        : [ ]       // additional predefined global variables
}